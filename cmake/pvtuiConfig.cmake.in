@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# If the library was built with FETCH_FTXUI=ON,
# the starter app needs to find or fetch it too.
if(@FETCH_FTXUI@)
    include(FetchContent)
    FetchContent_Declare(ftxui
        GIT_REPOSITORY https://github.com/arthursonzogni/ftxui.git
        GIT_TAG v6.1.9
    )
    FetchContent_MakeAvailable(ftxui)
else()
    find_dependency(ftxui)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/pvtuiTargets.cmake")
